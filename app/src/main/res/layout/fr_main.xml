<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9">

    <ImageView
        android:id="@+id/iv_backgr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_map"
        app:layout_constraintEnd_toEndOf="@+id/iv_map"
        app:layout_constraintStart_toStartOf="@+id/iv_map"
        app:layout_constraintTop_toTopOf="@+id/iv_map"
        app:srcCompat="@drawable/header" />

    <ImageView
        android:id="@+id/iv_backgr2"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_map"
        app:layout_constraintEnd_toStartOf="@+id/iv_backgr"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_map"
        app:srcCompat="@drawable/header" />
    <fragment
        android:id="@+id/iv_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:context=".presentation.view.MainActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/iv_backgr2"
        app:layout_constraintTop_toBottomOf="@+id/iv_header"
        app:srcCompat="@drawable/world_map_png28" />

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/header" />

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="Map"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Info"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_backgr2"
        app:layout_constraintEnd_toEndOf="@+id/iv_backgr2"
        app:layout_constraintStart_toStartOf="@+id/iv_backgr2"
        app:layout_constraintTop_toTopOf="@+id/iv_backgr2" />

    <SeekBar
        android:id="@+id/sb_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:thumb="@android:drawable/ic_menu_send"
        app:layout_constraintBottom_toBottomOf="@+id/iv_backgr"
        app:layout_constraintEnd_toEndOf="@+id/iv_backgr"
        app:layout_constraintStart_toStartOf="@+id/iv_backgr"
        app:layout_constraintTop_toTopOf="@+id/iv_backgr"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>